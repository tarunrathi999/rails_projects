<%= simple_form_for(@city_maker) do |f| %>
  <%= f.error_notification %>

  <div id="location_section" class="form-inputs">
    <div class="row">
      <div class="col-xs-10">
        <%= f.input :location_name, label: "Enter location/area of CityMaker", placeholder: "Enter new location", input_html: { id: 'location_input' } %>
        <span id="helpBlock" class="help-block">eg. Navrangpura, Ahmedabad, India.</span>
      </div>
    </div>

    <hr />

    <div class="hide1">
      <%= f.input :lat, input_html: { data: { geo: 'lat' } } %>
      <%= f.input :lng, input_html: { data: { geo: 'lng' } } %>
    </div>

    <%= f.input :avatar, as: :file %>

    <hr />

    <div class="row">
      <div class="col-xs-4">
        <%= f.association :category, include_blank: false %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-8">
        <%= f.input :name %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10">
        <%= f.input :description, input_html: { rows: 4 } %>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-5">
        <%= f.input :address1, input_html: { rows: 3 } %>
      </div>
      <div class="col-xs-5">
        <%= f.input :address2, input_html: { rows: 3 } %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <%= f.input :city %>
      </div>
      <div class="col-xs-3">
        <%= f.input :state %>
      </div>
      <div class="col-xs-3">
        <%= f.input :country %>
      </div>
    </div>

    <hr />

    <input id="input-id" type="number" class="rating" min=1 max=5 step=1 data-size="xs" >

    <div class="row">
      <div class="col-xs-3">
        <%= f.input :phone %>
      </div>
      <div class="col-xs-4">
        <%= f.input :timings %>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-xs-9">
        <%= f.input :note, input_html: { rows: 4 } %>
      </div>
    </div>

  </div>

  <br />
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success btn-lg" %>
  </div>
  <br />
<% end %>
