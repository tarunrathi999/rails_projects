<%= simple_form_for(@review, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :rating, input_html: { class: "rating", data: { size: "xs" } } %>
    <%= f.hidden_field :city_maker_id %>
    <%= f.hidden_field :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
